<!--INCLUDE THE HEADER-->
<% include ../partials/header%>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Edit <%=campground.name%></h1>
		<div style="width:30%; margin: 25px auto;">				
			<!--AQUI SOBREESCRIBIMOS EL METODO PUT-->
			<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
				
				<div class="form-group">
					<input class="form-control" type="text" name="data[name]" value="<%=campground.name%>">
				</div>

				<div class="form-group">
					<input class="form-control" type="number" name="data[price]" value="<%=campground.price%>" min="0.01" step="0.01">	
				</div>
				
				<div class="form-group">
					<input class="form-control" type="text" name="data[image]" value="<%=campground.image%>">	
				</div>
				
				<div class="form-group">
					<input class="form-control" type="text" name="data[description]" value="<%=campground.description%>">	
				</div>
				
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
					
			</form>
			
			<a href="/campgrounds">Go back</a>
		</div>
	</div>
</div>
<!--INCLUDE THE footer-->
<% include ../partials/footer%>
